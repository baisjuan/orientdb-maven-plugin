<project>

	<modelVersion>4.0.0</modelVersion>

	<groupId>org.carlspring.maven</groupId>
	<artifactId>dummy-project</artifactId>
	<version>0.1-SNAPSHOT</version>

	<build>

		<resources>
			<resource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.carlspring.maven</groupId>
				<artifactId>orientdb-maven-plugin</artifactId>
				<version>${version.orientdb-maven-plugin}</version>

				<configuration>
					<configurationFile>${basedir}/src/test/resources/orientdb-server-config.xml</configurationFile>
				</configuration>

				<executions>
					<execution>
						<id>start</id>
						<goals>
							<goal>start</goal>
						</goals>
					</execution>
					<execution>
						<id>stop</id>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

	</build>

</project>
