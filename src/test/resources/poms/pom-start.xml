<project>

	<modelVersion>4.0.0</modelVersion>

	<groupId>org.carlspring.maven</groupId>
	<artifactId>dummy-project</artifactId>
	<version>0.1-SNAPSHOT</version>


	<properties>
		<binary.port>2414-2420</binary.port>
		<http.port>2470-2480</http.port>
		<username>root</username>
		<password>hello</password>
	</properties>


	<build>

		<resources>
			<resource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.carlspring.maven</groupId>
				<artifactId>orientdb-maven-plugin</artifactId>
				<version>${version.orientdb-maven-plugin}</version>

				<configuration>
					<configurationFile>/src/test/resources/orientdb-server-config.xml</configurationFile>
				</configuration>

				<executions>
					<execution>
						<id>start</id>
						<goals>
							<goal>start</goal>
						</goals>
					</execution>
					<execution>
						<id>stop</id>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

	</build>

</project>
